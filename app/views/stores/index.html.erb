<!DOCTYPE html>
<html>
<head>
  <title>Nomster</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<table class='col-xs-12'>
		<thead>
			<tr>
				<td class='table_title' colspan="5"> STORE LIST </td>
			</tr>
		</thead>
		<tbody>
			<tr class='first_headers'>
				<th colspan="2">IDENTIFICATION</th>
				<th colspan="2">AMOUNT</th>
				<th>PERFORMANCE</th>
			</tr>
			<tr class='second_headers'>
				<th>DISTRICT</th>
				<th>STORE #</th>
				<th>BALES</th>
				<th>LBS</th>
				<th>PERF SCORE</th>
			</tr>
			<% max_rate = 0 %> 
			<% @stores.each do |st| %> 
				<% store_rate = (st.total_weight/(st.square_feet*0.1)) %>
				<% if store_rate > max_rate %>
					<% max_rate = store_rate %>
				<%end%>
			 <%end%>
			<% @stores.each do |store| %>
				<tr>
					<td> <%= store.district %> </td>
					<td> <%= store.store_number %> </td>
					<td> <%= store.num_bales %> </td>
					<td> <%= store.total_weight %> </td>
					<td>
						<%= (((store.total_weight/(store.square_feet*0.1))/max_rate)*100).round() %>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>

<%= link_to 'Page 2', second_path %>

</body>
</html>  








